    <section
      class="vh-100 bg-image"
      style="
        background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');
      ">
      <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
          <div
            class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
              <div class="card m-4" style="border-radius: 15px">
                <div class="card-body p-5">
                  <h2 class="text-uppercase text-center mb-5">
                    Tạo toàn khoản
                  </h2>

                  <form action="/register" method="post">
                    <div class="form-outline mb-4 p-2">
                      <label class="form-label" for="ten">Tên của bạn</label>
                      <input
                        type="text"
                        name="ten"
                        class="form-control form-control-lg" />
                    </div>

                    <div class="form-outline mb-4 p-2">
                      <label class="form-label" for="phuongThucLienLac"
                        >Email</label
                      >
                      <input
                        type="email"
                        name="phuongThucLienLac"
                        class="form-control form-control-lg" />
                    </div>

                    <div class="form-outline mb-4 p-2">
                      <label class="form-label" for="matKhau">Mật khẩu</label>
                      <input
                        type="password"
                        name="matKhau"
                        class="form-control form-control-lg" />
                    </div>

                    <div class="d-flex justify-content-center">
                      <button
                        type="submit"
                        class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">
                        Đăng ký
                      </button>
                    </div>

                    <p class="text-center text-muted mt-5 mb-0">
                      Bạn đã có tài khoản?
                      <a href="/login" class="fw-bold text-body"
                        ><u>Đằng nhập</u></a
                      >
                    </p>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
